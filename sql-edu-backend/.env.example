# 复制本文件为 .env 并填写真实配置，切勿将 .env 提交到 Git

# 邮件（QQ 邮箱示例）
MAIL_USERNAME=your_email@example.com
MAIL_PASSWORD=your_mail_auth_code
MAIL_FROM=your_email@example.com
MAIL_PORT=465
MAIL_SERVER=smtp.qq.com
MAIL_STARTTLS=False
MAIL_SSL_TLS=True

# 数据库
DB_URL=mysql+aiomysql://用户名:密码@127.0.0.1:3306/库名?charset=utf8mb4

# JWT 与密钥（必填，建议用 openssl rand -hex 32 生成）
SECRET_KEY=your_secret_key_here
JWT_SECRET_KEY=your_jwt_secret_key_here

# AI 接口
AI_API_KEY=your_ai_api_key
AI_BASE_URL=https://api.openai.com/v1
# 模型名称，统一用于判题提示、对话、题目生成等
AI_MODEL_NAME=gemini-3-pro-high
# 温度，统一控制所有 AI 调用的随机性（0～1，越高越随机）
AI_TEMPERATURE=0.7
